<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('partials/head.ejs') %> 
  </head>
  <body>
    <%- include('partials/navigation.ejs') %>

    <div class="container vh-100 d-flex justify-content-center align-items-center">
      <div class="card bg-dark">
        <div class="card-header text-center">
          <h3 class="text-white">Contact me</h3>
        </div>
        <div class="card-body">
          <form action="/contact" method="post">
            <div class="mb-3">
              <label for="email">Email</label>
              <input name="email" type="email" placeholder="Email" class="form-control">
            </div>

            <div class="mb-3">
              <label for="message">Message:</label>
              <textarea name="message" id="" rows="3" class="form-control" placeholder="Add message"></textarea>
            </div>

            <div class="d-flex justify-content-center">
              <!-- <button class="btn btn-outline-light col-6">Send</button> -->
              <input type="submit" id="form-submit" class="contact-form-btn" value="Send" required />
            </div>

          </form>
        </div>
      </div>
    </div>

    <%- include('partials/footer.ejs') %>
  </body>
</html>
